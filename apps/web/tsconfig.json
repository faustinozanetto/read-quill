{
  "extends": "@read-quill/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@state/*": ["state/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
